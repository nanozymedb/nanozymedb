<%-include("../partials/header") %>
<div class="search-table container-overall">
  <table class="table table-condensed table-responsive">
    <thead>
      <tr>
        <th class="table-dark"><h5>First Name</h5></th>
        <th class="table-dark"><h5>Last Name</h5></th>
        <th class="table-dark"><h5>Email</h5></th>
        <th class="table-dark"><h5>Status</h5></th>
        <th class="table-dark"><h5>More Info.</h5></th>
      </tr>
    </thead>
    <tbody class="panel">
      <% data.forEach(data=>{ %>
      <tr>
        <td class="table-dark"><p><%= data.fName %></p></td>
        <td class="table-dark"><p><%= data.lName %></p></td>
        <td class="table-dark"><p><%= data.email %></p></td>
        <td class="table-dark"><p><%= data.status %></p></td>

        <td class="table-dark">
          <a href="/admin/manage-user/<%= data._id %>"
            ><i class="fas fa-info info-icon fa-sm"></i
          ></a>
        </td>
      </tr>
      <tr></tr>
      <% }) %>
    </tbody>
  </table>
  <% if (pages > 0) { %>
  <ul class="pagination text-center">
    <% if (current == 1) { %>
    <li class="disabled"><a>First</a></li>
    <% } else { %>
    <li><a href="/admin/manage-user">First</a></li>
    <% } %> <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %> <% if
    (i !== 1) { %>
    <li class="disabled"><a>...</a></li>
    <% } %> <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %> <% if
    (i == current) { %>
    <li class="active"><a><%= i %></a></li>
    <% } else { %>
    <li><a href="/admin/manage-user?page=<%= i %>"><%= i %></a></li>
    <% } %> <% if (i == Number(current) + 4 && i < pages) { %>
    <li class="disabled"><a>...</a></li>
    <% } %> <% } %> <% if (current == pages) { %>
    <li class="disabled"><a>Last</a></li>
    <% } else { %>
    <li><a href="/admin/manage-user?page=<%= pages %>">Last</a></li>
    <% } %>
  </ul>
  <% } %>
</div>
